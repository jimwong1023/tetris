<div id='newUserForm' class='form-div'>
  <h3>Create a User</h3>
  <%= form_for @user do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'Done', remote: true, id: 'submit-new_user-button', class: 'submit-button' %>
  <% end %>
  <%= link_to "Go Back", root_path, class: 'button' %>
</div>